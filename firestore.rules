rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Restaurants collection - read-only for all users
    match /restaurants/{restaurantId} {
      allow read: if true;
      // Allow creating new restaurants and updating priceRange field for initialization
      allow create: if true; // Allow app to add new restaurants
      // Allow updating only the priceRange field for initialization
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['priceRange']);
      allow delete: if false; // Only admins can delete (via Firebase Console)
    }

    // Discovered restaurants collection - from Google Places API
    match /discovered_restaurants/{restaurantId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if false;
    }

    // User-specific data
    match /users/{userId} {
      // Users can only access their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // User's favorites subcollection
      match /favorites/{restaurantId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // User's reviews subcollection
      match /reviews/{reviewId} {
        allow read: if true; // Anyone can read reviews
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Reviews collection - for querying all reviews
    match /reviews/{reviewId} {
      allow read: if true; // Anyone can read reviews
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid; // Only authenticated users can create their own reviews
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
