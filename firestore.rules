rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Restaurants collection - read-only for all users
    match /restaurants/{restaurantId} {
      allow read: if true;
      allow write: if false; // Only admins can write (via Firebase Console)
    }

    // User-specific data
    match /users/{userId} {
      // Users can only access their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // User's favorites subcollection
      match /favorites/{restaurantId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // User's reviews subcollection
      match /reviews/{reviewId} {
        allow read: if true; // Anyone can read reviews
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Reviews collection - for querying all reviews
    match /reviews/{reviewId} {
      allow read: if true; // Anyone can read reviews
      allow create: if request.auth != null; // Only authenticated users can create
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
